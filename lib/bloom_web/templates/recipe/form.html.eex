<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :link, class: "control-label" %>
    <%= text_input f, :link, class: "form-control" %>
    <%= error_tag f, :link %>
  </div>

  <div class="form-group">
    <%= label f, :servings, class: "control-label" %>
    <%= number_input f, :servings, class: "form-control" %>
    <%= error_tag f, :servings %>
  </div>

  <div class="form-group">
    <%= label f, :query, class: "control-label" %>
    <%= textarea f, :query, class: "form-control" %>
    <%= error_tag f, :query %>
  </div>

  <h3>Ingredients</h3>

  <%= render BloomWeb.RecipeView, "_ingredient_fields.html", f: f %>

  <%# <p> %>
  <%#   <%= link_to_ingredient_fields %1> %>
  <%# </p> %>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
